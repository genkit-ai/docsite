---
import Button from './Button.astro';
import Link from './Link.astro';

const features = [
  {
    title: 'Unified APIs for any model',
    body: 'Use GoogleAI, OpenAI, Claude, and Ollama through one SDK.',
    href: '/docs/models',
    icon: '/assets/unified_apis.svg'
  },
  {
    title: 'Composable workflows',
    body: 'Structure chat, RAG, tool use, and agents with built-in primitives.',
    href: '/docs/flows',
    icon: '/assets/composable_workflows.svg'
  },
  {
    title: 'Production-ready tools',
    body: 'Local dev, debugging UI, and deployment to Firebase, Cloud Run, or your stack.',
    href: '/docs/devtools',
    icon: '/assets/production_ready.svg'
  }
];
---

<section class="pt-4 sm:pt-8 px-4 sm:px-6 text-center max-w-4xl sm:max-w-6xl mx-auto">
  <h2 class="section-title mb-3 sm:mb-4 text-lg sm:text-2xl">Simplified AI Integration</h2>
  <p class="caption text-muted mb-4 sm:mb-8 text-sm sm:text-base">The fastest way to build, test, and deploy real AI<br /> features into your apps.</p>

  <Button variant="primary" href="https://github.com/genkit-ai/genkit-by-example">
    See Example Apps
  </Button>
  
  <div class="grid md:grid-cols-3 gap-4 sm:gap-6 mt-4 sm:mt-8">
    {features.map((feature) => (
      <div class="rounded-xl sm:rounded-2xl p-4 sm:p-6 transition-colors text-left feature-card">
        <img src={feature.icon} alt={feature.title} class="w-full mb-3 sm:mb-4" />
        <h3 class="card-title text-muted mb-2 text-sm sm:text-base">{feature.title}</h3>
        <p class="card-text text-muted mb-3 sm:mb-4 text-xs sm:text-sm">{feature.body}</p>
        <Link variant="card" href={feature.href}>
          <span class="text-xs sm:text-sm">Learn more â†’</span>
        </Link>
      </div>
    ))}
  </div>
</section>

<style>
  .feature-card {
    background-color: var(--surface-subtle);
    border: 1px solid var(--border-secondary);
  }
  
  .feature-card:hover {
    background-color: var(--surface-subtle);
    opacity: 0.8;
  }
</style>
