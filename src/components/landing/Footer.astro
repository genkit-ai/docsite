---
import Icon from './Icon.astro';
import Link from './Link.astro';
---

<footer class="pt-8 px-6 pb-6">
  <div class="max-w-4xl mx-auto">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6 space-y-4 sm:space-y-0">
      <div class="flex items-center space-x-1">
        <Icon name="genkit-logo" size="sm" class="footer-logo" />
        <span class="footer-brand text-base">Genkit</span>
      </div>
      <div class="flex space-x-6">
        <Link variant="footer" href="/docs/get-started">Docs</Link>
        <Link variant="footer" href="https://examples.genkit.dev/">Learn</Link>
      </div>
    </div>
    
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center space-y-3 sm:space-y-0">
      <span class="footer-credit text-sm">Google for Developers</span>
      <div class="flex space-x-6">
        <Link variant="footer" href="/terms">Terms of Service</Link>
        <Link variant="footer" href="/privacy">Privacy Policy</Link>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-logo,
  .footer-brand {
    color: var(--text-primary);
  }
  
  .footer-credit {
    color: var(--text-muted);
  }
</style>
