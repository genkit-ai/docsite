---
import Button from './Button.astro';
import Link from './Link.astro';


const { leftTitle, leftBody, leftCtaText, leftCtaUrl } = Astro.props;
---
<section class="mx-auto max-w-6xl px-6 grid gap-12 md:grid-cols-3 items-start">
  <!-- Left Column - Info -->
  <div class="space-y-8 pt-4">
    <div class="space-y-6">
      <h1 class="section-title">
        {leftTitle}
      </h1>
      <p class="caption text-muted">
        {leftBody}
      </p>
    </div>
    
    <div class="space-y-4">
      <div class="pb-2">
        <Link variant="card" href={leftCtaUrl}>
          Explore Samples Repository
        </Link>
      </div>
      <Button variant="secondary" size="md" href={leftCtaUrl}>
        {leftCtaText}
      </Button>
    </div>
  </div>

  <!-- Right Column - Chatbot Showcase -->
  <div class="md:col-span-2 space-y-4">
    <div class="bg-gray-900/50 border-[0.5px] border-[#828387] rounded-2xl overflow-hidden backdrop-blur-sm">
      <img src="/assets/simple_chatbot.svg" alt="Simple Chatbot Interface" class="w-full h-auto" />
    </div>
  </div>
</section>
