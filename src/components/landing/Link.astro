---
type LinkVariant = 'card' | 'footer' | 'nav';

interface Props {
  variant: LinkVariant;
  href: string;
}

const { variant, href } = Astro.props;

// Simple variant styles
const variants = {
  card: 'text-sm font-medium link-card hover:text-white no-underline transition-colors duration-200',
  footer: 'text-xs link-footer hover:text-white no-underline transition-colors duration-200',
  nav: 'link-nav no-underline text-sm font-normal transition-colors'
} as const;
---

<a href={href} class={variants[variant]}>
  <slot />
</a>

<style>
  .link-card {
    color: var(--genkit-primary);
  }
  
  .link-nav {
    color: var(--text-secondary);
  }
  
  .link-nav:hover {
    color: var(--text-primary);
  }
  
  .link-footer {
    color: var(--text-muted);
  }
</style>
