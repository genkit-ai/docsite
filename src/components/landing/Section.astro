---
interface Props {
  spacing?: 'small' | 'default' | 'large';
  container?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  background?: string;
}

const { 
  spacing: spacingSize = 'default', 
  container = 'lg',
  class: className = '',
  background = ''
} = Astro.props;

// Responsive section spacing classes
const sectionSpacing = {
  small: "py-6 sm:py-8 px-6",
  default: "pt-6 sm:pt-8 px-6", 
  large: "py-12 sm:py-20 px-6"
};

// Container width classes  
const containerWidths = {
  sm: "max-w-2xl mx-auto",
  md: "max-w-4xl mx-auto", 
  lg: "max-w-6xl mx-auto",
  xl: "max-w-7xl mx-auto"
};

const spacingClass = sectionSpacing[spacingSize];
const containerClass = containerWidths[container];
---

<section class={`${spacingClass} ${background} ${className}`}>
  <div class={containerClass}>
    <slot />
  </div>
</section>
