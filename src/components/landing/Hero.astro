---
import Section from './Section.astro';
import Button from './Button.astro';
import Icon from './Icon.astro';

interface Props {
  badge?: string;
  subtitle?: string;
  primaryCta: { text: string; href: string };
  secondaryCta: { text: string; href: string };
}

const {
  badge,
  subtitle,
  primaryCta,
  secondaryCta
} = Astro.props;
---

<Section spacing="default" container="md" class="text-center">
  <!-- Badge -->
  <span class="mt-10 inline-flex items-center justify-center text-xs rounded-full mb-0 font-mono font-extralight leading-[10px] gap-2.5  border-[1.5px] px-4 py-2 text-gray-300 border-gray-700/60 transition-colors duration-200">
    {badge}
  </span>
  
  <!-- Main Heading -->
  <h1 class="hero-text mb-4 mt-0">
    One <span class="inline-block relative top-6">
      <Icon name="genkit-logo" size="w-20 h-20" class="pl-2.5" />
    </span> framework for<br>
    building, debugging, and<br>
    deploying AI-powered apps
  </h1>
  
  <!-- Subtitle -->
  <p class="caption text-muted mb-6 max-w-xl mx-auto">
    {subtitle}
  </p>
  
  <!-- CTA Buttons -->
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <Button variant="primary" href={primaryCta.href}>
      {primaryCta.text}
    </Button>
    <Button variant="secondary" href={secondaryCta.href}>
      {secondaryCta.text}
    </Button>
  </div>
</Section>

<style>
.hero-text {
  font-size: 3rem; /* 48px */
  margin-top: 3rem;
  margin-bottom: 3rem;
  line-height: 1.25;
  letter-spacing: -0.02em;
  color: #F2F2F2;
  font-family: 'Google Sans', Arial, sans-serif;
}

@media (min-width: 768px) {
  .hero-text {
    font-size: 4rem; /* 60px */
    margin-top: 5rem;
    margin-bottom: 4rem;
  }
}
</style>
