---
import Icon from './Icon.astro';
import Link from './Link.astro';

type ResourceCard = {
  title: string;
  description: string;
  href: string;
  icon: "document" | "github" | "discord";
  ctaText: string;
};

const resourceCards: ResourceCard[] = [
  {
    title: "Docs",
    description: "Developer guide, API reference, tutorials",
    href: "/docs/get-started",
    icon: "document",
    ctaText: "Read docs"
  },
  {
    title: "GitHub",
    description: "Source code, file issues", 
    href: "https://github.com/firebase/genkit",
    icon: "github",
    ctaText: "View repository"
  },
  {
    title: "Discord",
    description: "Join the community, ask questions, share your work", 
    href: "https://genkit.dev/discord",
    icon: "discord",
    ctaText: "Join us"
  }
];

---

<section class="pt-4 sm:pt-6 px-4 sm:px-6">
  <div class="max-w-6xl mx-auto">
    <div class="grid sm:grid-cols-3 gap-3 sm:gap-6 mx-auto">
      {resourceCards.map((card) => (
        <div class="rounded-xl p-4 sm:p-6 flex items-start gap-3 sm:gap-6 resource-card h-full">
          <div class="rounded-xl p-3 sm:p-6 resource-icon-container flex-shrink-0">
            <Icon name={card.icon} size="md" class="resource-icon w-6 h-6 sm:w-8 sm:h-8" />
          </div>
          <div class="flex flex-col min-w-0 h-full">
            <h3 class="card-title text-muted mb-1 sm:mb-2 flex items-center gap-2">
              {card.title}
              {card.title === 'GitHub' && (
                <Icon name="github" size="sm" class="resource-icon" />
              )}
            </h3>
            <p class="card-text text-muted mb-3 sm:mb-4 flex-grow">
              {card.description}
            </p>
            <Link variant="card" href={card.href}>
              {card.ctaText}
            </Link>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .resource-card {
    background-color: var(--genkit-nav-bg);
    border: 1px solid var(--border-secondary);
  }
  
  .resource-icon-container {
    background-color: var(--genkit-icon-bg);
  }
  
  .resource-icon {
    color: var(--text-muted);
  }
</style>
