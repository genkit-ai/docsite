---
import Button from './Button.astro';
import Icon from './Icon.astro';
import Link from './Link.astro';
---

<nav class="sticky top-0 z-10 nav-bar">
  <div class="flex items-center justify-between px-6 h-16 nav-content">
    <div class="flex items-center gap-6">
      <img src="/genkit_logo.png" alt="Genkit" class="h-10" />
      <div class="hidden sm:flex gap-6">
        <Link variant="nav" href="/docs/get-started">Docs</Link>
        <Link variant="nav" href="https://examples.genkit.dev/">Learn</Link>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <Link variant="nav" href="https://github.com/firebase/genkit" class="w-8 h-8 flex items-center">
        <Icon name="github" size="sm" />
      </Link>
      <Link variant="nav" href="https://discord.gg/genkit" class="w-8 h-8 flex items-center">
        <Icon name="discord" size="sm" />
      </Link>
      
      <Button variant="primary" href="/docs/get-started">
        <span class="hidden sm:inline">Install Genkit</span>
        <span class="sm:hidden">Install</span>
      </Button>
    </div>
  </div>
</nav>

<style>
  .nav-bar {
    background-color: var(--genkit-nav-bg);
  }
  
  .nav-content {
    color: var(--text-primary);
  }
</style>
