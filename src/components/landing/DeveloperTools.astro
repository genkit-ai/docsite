---
import Button from './Button.astro';
import StepList from './StepList.astro';

const developerTools = {
  title: "Built-in developer tools",
  subtitle: "Run, debug and observe your AI workflows from the local developer UI.",
  image: "/assets/dev_ui.png",
  cta: { text: "Install Genkit", href: "/docs/get-started" }
};
---

<section class="pt-16 sm:pt-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="section-title mb-4">{developerTools.title}</h1>
      <p class="caption text-muted max-w-72 mx-auto">
        {developerTools.subtitle}
      </p>
    </div>
    
    <!-- Mobile: image first, then content (natural document order)
         Desktop: content left, image right (using order to swap) -->
    <div class="flex flex-col md:flex-row md:items-start md:gap-12">
      <!-- Image first in document order - shows first on mobile, second on desktop -->
      <div class="md:flex-1 md:order-2 flex justify-center">
        <img 
          src={developerTools.image} 
          alt="Genkit Developer UI showing flows and debugging interface" 
          class="w-full max-w-4xl h-auto mb-8 md:mb-0 rounded-xl shadow-2xl dev-tools-image" 
        />
      </div>
      
      <!-- Content second in document order - shows second on mobile, first on desktop -->
      <div class="md:w-80 space-y-8 md:shrink-0 md:order-1">
        <StepList />
        <Button variant="secondary" href={developerTools.cta.href}>
          {developerTools.cta.text}
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .dev-tools-image {
    border: 0.5px solid var(--border-primary);
  }
</style>