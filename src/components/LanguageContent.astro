---
export interface Props {
  lang: string;
  children?: any;
}

const { lang } = Astro.props;

// Parse space-separated languages (e.g., "js go" -> ["js", "go"])
const languages = lang.trim().split(/\s+/).filter(Boolean);
const langAttribute = languages.join(' ');
---

<!-- 
  Content visibility is controlled ENTIRELY by the CSS in head.astro
  using the html[data-genkit-lang] attribute selector.
  
  Multi-language support: lang="js go" will show content for both JS and Go
-->
<div class="lang-content" data-lang={langAttribute}>
  <slot />
</div>
