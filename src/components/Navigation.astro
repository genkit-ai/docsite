---
import Button from './Button.astro';
import Icon from './Icon.astro';
// Local tokens for navigation
const layout = {
  navWrap: "w-full px-4 sm:w-4/5 lg:w-3/4 mx-auto",
  navBar: "bg-gray-800 rounded-full border border-gray-700/60 pr-3 pl-5 flex items-center justify-between h-13"
};

const icon = {
  sm: "w-4 h-4",
  md: "w-6 h-6",
  xs: "w-3 h-3",
  container: "w-8 h-8"
};

interface NavLink {
  label: string;
  href: string;
}

const navLinks: NavLink[] = [
  { label: 'Learn', href: '/learn' },
  { label: 'Docs', href: '/docs' }
];
---

<nav class="w-full py-4 sticky top-0 z-50">
  <div class={layout.navWrap}>
    <div class={layout.navBar}>
            <!-- Logo -->
      <div class="flex items-center gap-4 sm:gap-8">
        <div class="flex items-center gap-2.5">
          <!-- Genkit Logo -->
          <div class="flex items-center justify-center">
            <Icon name="genkit-logo" size={icon.md} class="text-white" />
          </div>
          <span class="text-white text-base sm:text-lg font-medium font-sans">Genkit</span>
        </div>
        
        <!-- Navigation Links - Hidden on small screens -->
        <div class="hidden sm:flex items-center gap-6">
          {navLinks.map(link => (
            <a 
              href={link.href}
              class="text-gray-400 no-underline text-sm font-normal transition-colors hover:text-white"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Right side -->
      <div class="flex items-center gap-2 sm:gap-3.5">
        <!-- Search -->
        <div class="relative hidden md:block">
          <input 
            type="text" 
            placeholder="Search" 
            class="bg-gray-900 border border-gray-600/40 text-white text-xs rounded-lg px-3.5 pr-8 py-0.5 w-40 h-8 outline-none font-sans placeholder-gray-400"
          >
          <Icon name="search" size={icon.xs} class="text-gray-400 absolute right-2.5 top-1/2 transform -translate-y-1/2" />
        </div>
        
        <!-- Social Icons -->
        <div class="flex items-center gap-1 sm:gap-2">
          <!-- GitHub Icon -->
          <a href="https://github.com/genkit-ai" class={`flex items-center justify-center ${icon.container}`}>
            <Icon name="github" size={icon.sm} class="text-blue-200" />
          </a>
          
          <!-- Discord Icon -->
          <a href="https://discord.gg/genkit" class={`flex items-center justify-center ${icon.container}`}>
            <Icon name="discord" size={icon.sm} class="text-blue-200" />
          </a>
        </div>
        
        <!-- Install Button -->
        <Button variant="primary" size="md" href="/docs/get-started">
          <span class="hidden sm:inline">Install Genkit</span>
          <span class="sm:hidden">Install</span>
        </Button>
      </div>
    </div>
  </div>
</nav>
