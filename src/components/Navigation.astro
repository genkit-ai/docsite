---
import Button from './Button.astro';
import Icon from './Icon.astro';


const icon = {
  sm: "w-4 h-4",
  md: "w-6 h-6",
  xs: "w-3 h-3",
  container: "w-8 h-8"
};

interface NavLink {
  label: string;
  href: string;
}

const navLinks: NavLink[] = [
  { label: 'Docs', href: '/docs/get-started' },
  { label: 'Learn', href: 'https://examples.genkit.dev/' }
];
---

<nav class="w-full sticky top-0 z-10">
  <div class="w-full">
    <div class="flex items-center justify-between px-6 py-3" style="
      background-color: rgb(35, 38, 47);
      border-bottom: 1px solid rgb(23, 24, 28);
      height: 64px;
      color: rgb(193, 195, 200);
      font-family: ui-sans-serif, system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji', ui-sans-serif, system-ui, -apple-system, 'system-ui', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
      line-height: 28px;
      box-sizing: border-box;
      -webkit-font-smoothing: antialiased;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    ">
            <!-- Logo -->
      <div class="flex items-center gap-4 sm:gap-8">
        <div class="flex items-center gap-2.5">
          <!-- Genkit Logo -->
          <div class="flex items-center justify-center">
            <img src="/src/assets/genkit_logo.png" alt="Genkit" class="h-10" />
          </div>        </div>
        
        <!-- Navigation Links - Hidden on small screens -->
        <div class="hidden sm:flex items-center gap-6">
          {navLinks.map(link => (
            <a 
              href={link.href}
              class="text-gray-400 no-underline text-sm font-normal transition-colors hover:text-white"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Right side -->
      <div class="flex items-center gap-2 sm:gap-3.5">

        
        <!-- Social Icons -->
        <div class="flex items-center gap-1 sm:gap-2">
          <!-- GitHub Icon -->
          <a href="https://github.com/genkit-ai" class={`flex items-center justify-center ${icon.container}`}>
            <Icon name="github" size={icon.sm} class="text-blue-200" />
          </a>
          
          <!-- Discord Icon -->
          <a href="https://discord.gg/genkit" class={`flex items-center justify-center ${icon.container}`}>
            <Icon name="discord" size={icon.sm} class="text-blue-200" />
          </a>
        </div>
        
        <!-- Install Button -->
        <Button variant="primary" size="md" href="/docs/get-started" class="flex items-center gap-2">
          <span class="hidden sm:inline">Install Genkit</span>
          <span class="sm:hidden">Install</span>
        </Button>
      </div>
    </div>
  </div>
</nav>
