---
// src/components/InfoCard.astro
import { Icon } from "@astrojs/starlight/components";

// Define the props this component accepts
interface Props {
  title: string;
  learnMoreUrl: string;
  learnMoreText?: string;
}

const { title, learnMoreUrl } = Astro.props;
const learnMoreText = Astro.props.learnMoreText ?? "Learn more";
---

<a href={learnMoreUrl} class="card clickable-block">
  <p class="title sl-flex text-gray-900 dark:text-gray-50">
    <span set:html={title} />
  </p>
  <div class="body text-gray-700 dark:text-gray-400"><slot /></div>
  {
    learnMoreUrl && (
      <div class="learnmore text-gray-900 dark:text-gray-50">
        {learnMoreText}
      </div>
    )
  }
</a>

<style>
  .clickable-block {
    display: flex;
    flex-direction: column;
    background-color: var(--sl-color-bg-surface-raised, var(--sl-color-bg-surface)); /* Starlight variable for card-like backgrounds */
    color: var(--sl-color-text); /* Starlight's default text color */
    text-decoration: none;
  }

  .clickable-block:hover,
  .clickable-block:focus {
    background-color: var(--sl-color-gray-6);
    box-shadow: var(--sl-shadow-sm); 
    outline: none; 
  }

  .clickable-block:focus-visible {
    outline: 2px solid var(--sl-color-accent);
    outline-offset: 2px;
  }
  
  .card {
    border-radius: 8px;
    border-width: 1px;

    padding: 30px;
    width: 100%;
    height: 100%;
  }

  .title {
    font-size: 20px;
    font-weight: 500;
    line-height: 100%;
    height: 50px;
  }

  .body {
    font-size: 14px;
    font-weight: 400;
    line-height: 24px;
    flex-grow: 1;
    padding: 24px 0;
  }

  .learnmore {
      text-decoration: none;
      font-size: 16px;
      font-weight: 500;
      line-height: 24px;
  }
</style>
