---
// Layout component for the landing page
import "../landing.css";
import GA from "../content/custom/ga.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="description" content="Open-source framework for building AI-powered apps with unified APIs for Google Gemini, GPT, Claude, and more. Built-in developer tools, structured outputs, tool calling, and production monitoring. Deploy anywhere.">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Genkit - Open-source AI framework by Google in JavaScript, Go and Python</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="sitemap" href="/sitemap-index.xml" />
  <!-- Google Fonts for landing page -->
  <!-- Preconnect establishes early connections to font servers for faster loading -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@300;400;500&family=Google+Sans+Text:wght@400;500&display=swap" rel="stylesheet">
  
  <!-- Critical CSS to prevent FOUC -->
  <style>
    /* Prevent flash of unstyled content */
    :root {
      --genkit-primary: #C6D2FF;
      --genkit-primary-hover: #B8CAFF;
      --genkit-nav-bg: rgb(35, 38, 47);
      --genkit-icon-bg: rgba(55, 65, 81, 0.6);
      --text-primary: #F2F2F2;
      --text-muted: #9CA3AF;
      --surface-primary: rgba(0,0,0,0.9);
      --surface-elevated: #1F2937;
      --border-secondary: rgba(55,65,81,0.5);
      --border-light: rgba(255,255,255,0.1);
      --landing-bg: #0d0d0f;
      --landing-gradient: linear-gradient(to bottom right, rgba(168, 85, 247, 0.1) 0%, transparent 50%, rgba(255, 255, 255, 0.05) 100%);
    }
    
    /* Immediate styling to prevent any flash */
    html {
      background-color: #0d0d0f;
    }
    
    body {
      background-color: #0d0d0f;
      background-image: linear-gradient(to bottom right, rgba(168, 85, 247, 0.1) 0%, transparent 50%, rgba(255, 255, 255, 0.05) 100%);
      font-family: 'Google Sans', Arial, sans-serif;
      color: #F2F2F2;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    body.landing-page {
      background-color: #0d0d0f;
      background-image: linear-gradient(to bottom right, rgba(168, 85, 247, 0.1) 0%, transparent 50%, rgba(255, 255, 255, 0.05) 100%);
    }
    
    /* Prevent layout shift during font loading */
    * {
      font-family: 'Google Sans', Arial, sans-serif;
      box-sizing: border-box;
    }
    
    /* Critical navigation styles */
    nav {
      background-color: rgb(35, 38, 47);
      color: #F2F2F2;
    }
    
    /* Critical text styles */
    h1, h2, h3, h4, h5, h6 {
      color: #F2F2F2;
      font-family: 'Google Sans', Arial, sans-serif;
    }
    
    p {
      color: #F2F2F2;
      font-family: 'Google Sans', Arial, sans-serif;
    }
    
    /* Critical LanguageSelector styles for instant appearance */
    .language-selector-container {
      background-color: rgb(35, 38, 47);
      border: 1px solid rgba(55,65,81,0.5);
    }
    
    .lang-tab {
      color: #F2F2F2;
      opacity: 0.7;
    }
    
    .lang-tab.active {
      opacity: 1;
    }
    
    /* Critical provider tab styles - no Starlight dependencies */
    .provider-tabs {
      border-bottom: 1px solid rgba(55,65,81,0.5);
      margin-bottom: 0.75rem;
      padding-bottom: 0.5rem;
    }
    
    .provider-tab {
      background: #1F2937 !important;
      color: #9CA3AF !important;
      border: 1px solid rgba(55,65,81,0.5) !important;
      border-radius: 0.5rem;
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
      font-weight: 400;
      white-space: nowrap;
      cursor: pointer;
      transition: all 0.2s ease;
      font-family: 'Google Sans', Arial, sans-serif;
    }
    
    .provider-tab:hover {
      border-color: #C6D2FF !important;
      color: #F2F2F2 !important;
    }
    
    .provider-tab.active {
      background-color: #C6D2FF !important;
      color: #000000 !important;
      border-color: #C6D2FF !important;
    }
    
    /* Critical code container styles */
    .code-container {
      background: #151515;
      border: 1px solid #3e3e3e;
      border-radius: 0.5rem;
    }
    
    /* Hide content until fully loaded to prevent flash */
    .landing-page {
      visibility: hidden;
    }
    
    .landing-page.loaded {
      visibility: visible;
    }
  </style>
</head>


<body class="landing-page">
  <GA />
  <slot />
  <script>
    // Show content after DOM is loaded to prevent flash
    document.addEventListener('DOMContentLoaded', function() {
      document.body.classList.add('loaded');
    });
    
    // Fallback in case DOMContentLoaded already fired
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.add('loaded');
      });
    } else {
      document.body.classList.add('loaded');
    }
  </script>
</body>
</html>

