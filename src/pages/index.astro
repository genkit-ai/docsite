---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/landing/Navigation.astro";
import Hero from "../components/landing/Hero.astro";
import LanguageSelector from "../components/landing/LanguageSelector.astro";
import Features from "../components/landing/Features.astro";
import DeveloperTools from "../components/landing/DeveloperTools.astro";
import Examples from "../components/landing/Examples.astro";
import Resources from "../components/landing/Resources.astro";
import Footer from "../components/landing/Footer.astro";
import Button from "../components/landing/Button.astro";
import Icon from "../components/landing/Icon.astro";
import "../tailwind.css";
---

<Layout title="Genkit - One framework for building, debugging, and deploying AI-powered apps">
  <Navigation />  
  <Hero />
  <LanguageSelector />
  <Features />
  <DeveloperTools />
  <Examples />
  <Resources />
  <section class="py-12 sm:py-20 px-6 text-center">
    <div class="max-w-4xl mx-auto">
      <div class="flex items-center justify-center mx-auto mb-8">
        <Icon name="genkit-logo" size="lg" />
      </div>
      <h2 class="page-title mb-6">Get Started Today</h2>
      <h3 class="card-title text-muted mb-8"></h3>
      <Button variant="primary" href="/docs/get-started">
        Install Genkit
      </Button>
    </div>
  </section>
  <Footer />
</Layout>

<style>
.page-title {
  font-size: 2.25rem; /* 36px */
  font-weight: 700;
  line-height: 1.25;
  color: var(--text-primary);
}

@media (min-width: 768px) {
  .page-title {
    font-size: 3rem; /* 48px */
  }
}
</style>
